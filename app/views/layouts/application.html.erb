<html>
  <head>
  	<link rel="icon" type="images/png" href="<%= image_path('icon.png') %>" />
  	
    <title><%= @page_title || 'Chatting' %></title>
    <%= render :partial=>"shared/stylesheet_includes" %>
  </head>
  <body>
  
    <div id="layout-head">
    	<div id="layout-head-center-content">
	        <div id="flash-message" class="font-size12 bold" style="display: none;">
	        	<%= render :partial => "shared/flash_message", :locals => {:message => flash} %>
	        </div>
	        <% content_for :body_onload do %>
	        	showElement('flash-message');
	        	window.setTimeout("hideElement('flash-message');", 10000);
	        <% end %>
        </div>
    </div>
    
	<div id="about-container" class="border-radius10" style="display:none;">
		<%= render :partial => "shared/about" %>
	</div>
    
    <div id="layout-body">
      <div id="page-header">
        <%= render :partial=>"shared/header" %>
      </div>
      
      <div id="page-body">
        <%= "<h1>#{@page_title}</h1>" if @page_title %>
        
        <div id="page-content">
          <%= yield %>
        </div>
      </div>
      
      <div id="page-footer">
      	<%= render :partial=>"shared/footer" %>
      </div>
    </div>
    
    <div id="layout-footer">
    	<div id="layout-footer-left-contents" class='left-contents'>
    	</div>
    	<div id="layout-footer-middle-contents" class='middle-contents'>
    	</div>
    	<div id="layout-footer-right-contents" class='right-contents'>
    	</div>
    </div>
    
    <div id="javascript-includes">
	    <%= render :partial=>"shared/javascript_includes" %>
    </div>
  </body>
</html>
